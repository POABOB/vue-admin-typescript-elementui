{
  "defaultSeverity": "none",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "no-console": false,
    "semicolom" : [
      false,
      "always"
    ],
    "trailing-comma": [true, {
      "singleline": "never",
      "multiline": {
          "objects": "ignore",
          "arrays": "ignore",
          "functions": "never",
          "typeLiterals": "ignore"
      }
    }]
  },
  "arrow-parens": [
    false,
    "as-needed"
  ]
}
